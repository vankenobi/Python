#Faktöriyel hesaplama ornek

def faktoriel(s):
    sonuc = 1
    for i in range(1,s+1):
        sonuc *= i
    return sonuc    
sayi = int(input("Lutfen bir sayi giriniz:"))
 
a = faktoriel(sayi)
print(a)
