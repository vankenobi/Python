#usalma Fonksiyonu örnek 

def usal(x,y):
    sonuc = int(x**y)
    return sonuc 
taban = int(input("Lutfen taban giriniz:"))
us = int(input("Lutfen us giriniz:"))
sonuc = int(usal(taban,us))
print(sonuc)

